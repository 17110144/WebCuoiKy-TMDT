@model ClothesASPCoreApp.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "OrderConfirmation";
}
<form method="post">
    <br />
    <h2 style="text-align:center" class="text-info">Thông tin đơn đặt hàng</h2>
    <br />

    <partial name="~/Views/Shared/_OrderCustomerDetails.cshtml" model="Model.Orders" />
    <br />

    <partial name="~/Views/Shared/_OrderProductDetails.cshtml" model="Model.OrderDetails" />


    <div class="form-group">
        <input type="submit" class="btn btn-danger" asp-route-id="@Model.Orders.Id" value="Bạn có thực sự muốn xóa" />
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-success">Tiếp tục mua sắm</a>
    </div>
</form>