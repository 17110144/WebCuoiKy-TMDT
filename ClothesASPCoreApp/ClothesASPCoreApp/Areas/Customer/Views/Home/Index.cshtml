@model ClothesASPCoreApp.Models.ViewModel.ListProductViewModel
@{
    ViewData["Title"] = "Index";
}
<br />
<form asp-area="Customer" asp-controller="Home" asp-action="Index" method="get">
    <p>
        Danh mục sản phẩm
        <select asp-for="ProductCate" asp-items="Model.Category">
            <option value="">All</option>
        </select>
        Tìm theo tên sản phẩm: <input type="text" name="SearchString">
        <input type="submit" value="Tìm" />
        <a asp-action="Index">Hiển thị tất cả sản phẩm</a>
    </p>
</form>
<br />


<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:black"><b>@product.Price đ </b></label>
                        </div>
                        <a style="font-size:15px; color:white" asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id"> View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


