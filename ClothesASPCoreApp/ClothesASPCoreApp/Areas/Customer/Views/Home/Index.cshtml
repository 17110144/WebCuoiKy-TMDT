@model List<ClothesASPCoreApp.Models.Products>

<br />
<br />

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:black"><b>$@product.Price</b>/prd</label>
                        </div>
                        <div class="btn-group">
                            <label style="font-size:15px; color:black"><b>| Availble @product.Quantity |</b></label>
                        </div>
                        <a style="font-size:15px; color:white" asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id"> View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
