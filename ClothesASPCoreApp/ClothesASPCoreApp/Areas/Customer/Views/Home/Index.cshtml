@model ClothesASPCoreApp.Models.ViewModel.ListProductViewModel
@{
    ViewData["Title"] = "Index";
}
<br />

<form asp-area="Customer" asp-controller="Home" asp-action="Index" method="get">
    <div class="p-3 border rounded">
        <div class="form-group row">
            <div class="col-3">
                <label>Category</label>
            </div>
            <div class="col-5">
                <select asp-for="ProductCate" asp-items="Model.Category" class="form-control">
                    <option value="">All</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Product Name</label>
            </div>
            <div class="col-5">
                <input type="text" name="SearchString" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-7">
                <a asp-action="Index">Get all product</a>
            </div>

            <div class="col-3">
                <button type="submit" name="submit" value="Search" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</form>

<br />
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:black"><b>@product.Price đ </b></label>
                        </div>
                        <a style="font-size:15px; color:white" asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id"> View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


