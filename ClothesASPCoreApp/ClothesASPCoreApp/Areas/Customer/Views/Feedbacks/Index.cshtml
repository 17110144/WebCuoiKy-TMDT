@model IEnumerable<ClothesASPCoreApp.Models.Feedbacks>
@using ClothesASPCoreApp.Utility
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Feedbacks List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Feedbacks </a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Title)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Content)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <th>
                    @Html.DisplayFor(m => item.Title)
                </th>
                <th>
                    @Html.DisplayFor(m => item.Content)
                </th>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Date)
                </td>
                <td>
                    @*@if (User.IsInRole(SD.SuperAdminEndUser))
                    {
                        <a type="button" class="btn btn-danger" href="@Url.Action("Delete/" + item.Id).Replace("%2F", "/")">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    }*@
                    <a type="button" class="btn btn-danger" href="@Url.Action("Delete/" + item.Id).Replace("%2F", "/")">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>