@model ClothesASPCoreApp.Models.Products
@using ClothesASPCoreApp.Extensions
@using Microsoft.AspNetCore.Http
@using ClothesASPCoreApp.Models.ViewModel
@using ClothesASPCoreApp.Data;
@using ClothesASPCoreApp.Utility

@inject ApplicationDbContext _db
@inject IHttpContextAccessor HttpContextAccessor


<div class="cart-bg-overlay"></div>
<section class="single_product_details_area d-flex align-items-center">
    <div class="container" style="padding-top:50px;padding-bottom:50px;">
        <div class="row">
            <div class="col-lg-6">
                <div class="product-item">
                    <img class="product-big-img" src="@Model.Image" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <form method="post">
                    <div class="product-details">
                        <div class="pd-title">
                            <span>@Model.Brands.Name</span>
                            <h3>@Model.Name</h3>
                        </div>
                        <div class="pd-desc">
                            <p>
                                @Model.Description
                            </p>
                            <h4>@Model.Price</h4>
                        </div>

                        <!--Xử lý thêm sản phẩm vào giỏ hàng-->
                        <div class="quantity">
                            @{
                                bool isInBag = false;
                                List<NumberOfProducts> lstCart = HttpContextAccessor.HttpContext.Session.Get<List<NumberOfProducts>>("ssShoppingCart");
                                if (lstCart != null)
                                {
                                    foreach (NumberOfProducts item in lstCart)
                                    {
                                        if (item.IdProduct == Model.Id)
                                        {
                                            <div class="pro-qty">
                                                <input asp-for="@item.Quantity" class="form-control" readonly />
                                            </div>
                                            isInBag = true;
                                        }
                                    }
                                }
                                //số lượng lớn nhất có thể chọn là số lượng hàng tồn kho
                                @if (!isInBag)
                                {
                                    int maxQuantity = _db.Products.Where(p => p.Id == Model.Id).Where(p => p.isPublic).Select(p => p.Quantity).FirstOrDefault();
                                    int defaulValue = 1, minQuantity = 1;
                                    <div class="pro-qty">
                                        <input type="text" value="@defaulValue" min="@minQuantity" max="@maxQuantity">
                                    </div>
                                }
                            }
                            @{
                                @*if (User.IsInRole(SD.Customer))
                                {

                                    @if (isInBag)
                                    {
                                        <button type="submit" value="Xóa khỏi giỏ hàng" asp-action="remove" asp-route-id="@Model.Id" class="btn btn-danger form-control">Xóa khỏi giỏ hàng</button>
                                    }
                                    else
                                    {
                                        <button type="submit" asp-route-id="@Model.Id" class="btn essence-btn form-control">Thêm vào giỏ hàng</button>
                                    }
                                }
                                else
                                {
                                    <button type="submit" value="Thêm vào giỏ hàng" disabled class="primary-btn pd-cart">Thêm vào giỏ hàng</button>
                                }*@

                                @if (isInBag)
                                {
                                    <button type="submit" value="Xóa khỏi giỏ hàng" asp-action="remove" asp-route-id="@Model.Id" class="primary-btn pd-cart">Xóa khỏi giỏ hàng</button>
                                }
                                else
                                {
                                    <button type="submit" asp-route-id="@Model.Id" class="primary-btn pd-cart">Thêm vào giỏ hàng</button>
                                }
                            }
                        </div>
                        <!--Xử lý thêm vào giỏ hàng-->
                        <ul class="pd-tags">
                            <li><span>CATEGORIES</span>: @Model.Categories.Name, @Model.ProductTypes.Name</li>
                            <li><span>SPECIALTAG</span>: @Model.SpecialTags.Name</li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>