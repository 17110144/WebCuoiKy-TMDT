@model IEnumerable<ClothesASPCoreApp.Models.Products>
@{ 
    ViewData["Title"] = "Index";
}


<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh sách sản phẩm</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Thêm sản phẩm mới </a>
    </div>
</div>


<br />
<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Nhà cung cấp
            </th>
            <th>
                Ngày cập nhật
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng tồn kho
            </th>
            <th>
                Danh mục
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Tên thẻ
            </th>
            <th>
                Đã công bố
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <th>
                    @Html.DisplayFor(m => item.Brands.Name)
                </th>
                <th>
                    @Html.DisplayFor(m => item.Vendors.Name)
                </th>
                <th>
                    @Html.DisplayFor(m => item.Update)
                </th>
                <td>
                    @Html.DisplayFor(m => item.Price) đ
                </td>
                <td>
                    @Html.DisplayFor(m => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ProductTypes.Name)
                </td>
                <td>
                    @if (!item.SpecialTags.Name.Equals("--None--"))
                    {
                        @Html.DisplayFor(m => item.SpecialTags.Name)
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => item.isPublic)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

