@model ClothesASPCoreApp.Models.ViewModel.ProductsViewModel
@using ClothesASPCoreApp.Extensions

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<br />
<h2 class="text-info">Cập nhật thông tin sản phẩm</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" class="form-control" />
                </div>
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Thương hiệu">Thương hiệu</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.BrandID" asp-items="Model.Brands.ToSelectListItem(Model.Products.BrandID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Vendors">Nhà cung cấp</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.VendorID" asp-items="Model.Vendors.ToSelectListItem(Model.Products.VendorID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Products.Price">Đơn giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Products.Quantity">Số lượng tồn kho</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Products.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Categories">Danh mục</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.CategoryID" asp-items="Model.Categories.ToSelectListItem(Model.Products.CategoryID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="ProductTypes">Loại sản phẩm</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.ProductTypeID" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductTypeID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="SpecialTags">Tên thẻ</label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Products.SpecialTagID" asp-items="Model.SpecialTags.ToSelectListItem(Model.Products.SpecialTagID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Products.Price">Mô tả</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Description" class="form-control" />
                </div>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-4">
                    <label asp-for="@Model.Products.isPublic"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Products.isPublic" type="checkbox" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-4">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Cập nhật" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}