@model ClothesASPCoreApp.Models.Brands

@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Thông tin thương hiệu</h2>

<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-8">
                <label asp-for="isPublic"></label>
            </div>
            <div class="col-8">
                <input asp-for="isPublic" type="checkbox" readonly class="form-control" />
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Cập nhật</a>
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</div>
