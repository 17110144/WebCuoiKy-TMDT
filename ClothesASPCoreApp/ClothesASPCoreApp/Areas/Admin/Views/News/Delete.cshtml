@model ClothesASPCoreApp.Models.News
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Xóa tin</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Title" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Content"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Content" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Date"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Date" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-4">
                <label asp-for="isPublic"></label>
            </div>
            <div class="col-8">
                <input asp-for="isPublic" type="checkbox" class="form-control" />
            </div>
        </div>

        </div>
        <div class="col-4">
            <img src="@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Xóa" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
