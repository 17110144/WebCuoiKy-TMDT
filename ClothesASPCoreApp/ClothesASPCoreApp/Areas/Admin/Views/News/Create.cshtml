@model ClothesASPCoreApp.Models.News
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Thêm tin mới</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Content"></label>
            </div>
            <div class="col-5">
                <input asp-for="Content" class="form-control" />
            </div>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Sale"></label>
            </div>
            <div class="col-5">
                <input asp-for="Sale" class="form-control" />
            </div>
            <span asp-validation-for="Sale" class="text-danger"></span>
        </div>
        <!-- Image -->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-2">
                <label asp-for="isPublic"></label>
            </div>
            <div class="col-5">
                <input asp-for="isPublic" type="checkbox" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tạo" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
