@model ClothesASPCoreApp.Models.Customers
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 style="text-align:center">Xóa thông tin khách hàng</h2>
<div class="container">
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="DOB"></label>
                </div>
                <div class="col-5">
                    <input asp-for="DOB" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNumber" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
