@model ClothesASPCoreApp.Models.ViewModel.OrderDetailsViewModel
@using ClothesASPCoreApp.Extensions
@using ClothesASPCoreApp.Utility

@{
    ViewData["Title"] = "Edit";

}


<br />
<h2 class="text-info">Edit Order</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Orders.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.Customers.Name">Tên khách hàng</label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.Customers.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.Customers.Email">Email</label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.Customers.Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.OrderDate">Ngày đặt</label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.OrderDate" disabled id="datepicker" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.OrderTime">Giờ đặt</label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.OrderTime" disabled id="timepicker" type="text" class="timepicker form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.Customers.PhoneNumber">Số điện thoại</label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.Customers.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="Orders.SalesPerson">Nhân viên bán</label>
                </div>
                <div class="col-8">
                    @if (User.IsInRole(SD.AdminEndUser))
                    {
                        <input asp-for="@Model.Orders.SalesPerson.Name" readonly class="form-control" />
                        <input asp-for="@Model.Orders.SalesPersonId" hidden />

                    }
                    else
                    {
                        <select asp-for="@Model.Orders.SalesPersonId" asp-items="Model.SalesPerson.ToSelectListItemString(Model.Orders.SalesPersonId)" class="form-control"></select>

                    }
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orders.TotalBill"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orders.TotalBill" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orders.isConfirmed"></label>
                </div>
                <div class="col-8">
                    @if (@Model.Orders.isConfirmed == true)
                    {
                        <input asp-for="Orders.isConfirmed" disabled class="form-control" />
                    }
                    else
                    {
                        <input asp-for="Orders.isConfirmed" class="form-control" />
                    }
                </div>
            </div>

        </div>
        <div class="col-6">
            @* Partial View *@
            <partial name="~/Views/Shared/_OrderProductDetails.cshtml" model="Model" />
        </div>



        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Cập nhật" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        });
        $(document).ready(function () {
            var OrderTime = document.getElementById('datepicker').value;
            var splitData = "";
            if (OrderTime.indexOf(" ") > 0) {
                splitData = OrderTime.split(" ");

            }
            else {
                splitData = OrderTime.split("T");

            }

            var time = splitData[1].substring(0, 5);
            if (time.slice(-1) == ":") {
                time = time.substring(0, time.length - 1);

            }
            var amPmTime = splitData[2];
            $('#datepicker').attr('value', splitData[0]);
            $('#timepicker').attr('value', time + ' ' + amPmTime);

        });</script>
}