@model ClothesASPCoreApp.Models.ImportProductDetails

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Tạo nhà thẻ nhập hàng</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DateImport" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="DateImport" class="form-control" />
            </div>
            <span asp-validation-for="DateImport" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AmountProduct" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="AmountProduct" class="form-control" />
            </div>
            <span asp-validation-for="AmountProduct" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tạo" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>

