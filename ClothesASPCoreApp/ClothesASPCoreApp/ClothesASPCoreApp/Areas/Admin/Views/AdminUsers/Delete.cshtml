@model ClothesASPCoreApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 style="text-align:center">Vô hiệu hóa nhân viên</h2>
<div class="container">
    <form method="post">
        <div class="p-4 border rounded">
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-2">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNumber" readonly class="form-control" />
                </div>
            </div>
            <br />
            <div style="text-align:center">
                <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

