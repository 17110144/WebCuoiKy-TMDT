<!-- Product Shop Section Begin -->
<section class="product-shop spad">
    <div class="container">
        <div class="row">
            <!--Bộ lọc thông tin sản phẩm-->
            <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                <div class="filter-widget">
                    <h4 class="fw-title">Danh mục</h4>
                    <ul class="filter-catagories">
                        <li><a href="./Customer/Shopping?Category=Áo&SearchString=&submit=Search">Áo</a></li>
                        <li><a href="./Customer/Shopping?Category=Quần&SearchString=&submit=Search">Quần</a></li>
                        <li><a href="./Customer/Shopping?Category=Đồ+Âu&SearchString=&submit=Search">Đồ âu</a></li>
                    </ul>
                </div>
                <div class="filter-widget">
                    <h4 class="fw-title">Thương hiệu</h4>
                    <div class="fw-brand-check">
                        <div class="bc-item">
                            @foreach (var b in Model.Brands)
                            {
                                <label for="bc-calvin">
                                    @b.Name
                                    <input type="checkbox" id="bc-calvin">
                                    <span class="checkmark"></span>
                                </label>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!--cần xử lý tổng số kết quả tìm kiếm được và xắp xếp-->
            <div class="col-lg-9 order-1 order-lg-2">
                <!--DS Sản phẩm-->
                <div class="product-list">
                    <div class="row">
                        @foreach (var p in Model.Products)
                        {
                            <div class="col-lg-4 col-sm-6">
                                <div class="product-item">
                                    <div class="pi-pic">
                                        <img src="@p.Image" alt="">
                                        <ul>
                                            <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li> <!--Thêm vào giỏ hàng-->
                                            <li class="quick-view"><a asp-area="Customer" asp-controller="Shopping" asp-action="Details" asp-route-id=@p.Id>Xem chi tiết</a></li>
                                            <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="pi-text">
                                        <div class="catagory-name">@p.Brands.Name</div>
                                        <a href="#">
                                            <h5>@p.Name</h5>
                                        </a>
                                        <div class="product-price">
                                            @p.Price
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
