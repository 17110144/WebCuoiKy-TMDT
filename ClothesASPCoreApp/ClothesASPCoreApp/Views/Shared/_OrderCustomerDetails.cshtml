@model ClothesASPCoreApp.Models.Orders

<h4 class="text-success">Order Details</h4>

<div style="height:150px; background-color:aliceblue" class="container border">
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-2">
                Full Name
            </div>
            <div class="col-3">
                <input asp-for="@Model.Customers.Name" readonly class="form-control" />
            </div>
            <div class="col-2">
            </div>
            <div class="col-2">
                Email
            </div>
            <div class="col-3">
                <input asp-for="@Model.Customers.Email" readonly class="form-control" />
            </div>

        </div>
    </div>
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-2">
                Số điện thoại
            </div>
            <div class="col-3">
                <input asp-for="@Model.Customers.PhoneNumber" readonly class="form-control" />
            </div>
            <div class="col-2">
            </div>
            <div class="col-2">
                Ngày đặt
            </div>
            <div class="col-3">
                <input asp-for="@Model.OrderDate" readonly class="form-control" />
            </div>

        </div>
    </div>
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-2">
                Địa chỉ nhận hàng
            </div>
            <div class="col-3">
                <input asp-for="@Model.Address" readonly class="form-control" />
            </div>
            <div class="col-2">
            </div>
            <div class="col-2">
                Total Bill
            </div>
            <div class="col-3">
                <input asp-for="@Model.TotalBill" readonly class="form-control" />
            </div>
        </div>
    </div>
</div>
