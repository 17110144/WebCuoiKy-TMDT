@using Microsoft.AspNetCore.Http
@using ClothesASPCoreApp.Extensions
@using ClothesASPCoreApp.Utility
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Flower Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/jquery.timepicker.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                    @*<img src="favicon.ico" alt="Logo" style="width:40px;">*@
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Customer" asp-controller="Feedbacks" asp-action="Index">Feedbacks</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="News" asp-action="Index">News</a></li>

                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="SpecialTags" asp-action="Index">SpecialTags</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Vendors" asp-action="Index">Vendors</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a></li>

                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index">Orders</a></li>

                        @*@if (User.IsInRole(SD.SuperAdminEndUser))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="SpecialTags" asp-action="Index">SpecialTags</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Vendors" asp-action="Index">Vendors</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a></li>
                        }
                        @if (User.IsInRole(SD.SuperAdminEndUser) || User.IsInRole(SD.AdminEndUser))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index">Orders</a></li>

                        }*@

                        @if (HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart") != null)
                        {
                            <li class="nav-item">
                                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link text-dark">
                                    <i class="fas fa-shopping-cart"></i>
                                    @{
                                        var count = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart").Count;
                                    }
                                    (@count)
                                </a>

                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link text-dark">
                                    <i class="fas fa-shopping-cart"></i> (0)
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - FlowerShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.js" asp-append-version="true"></script>
    <script src="~/js/jquery.timepicker.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
