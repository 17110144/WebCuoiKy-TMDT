@model List<ClothesASPCoreApp.Models.OrderDetails>
@{ 
    double TotalBill = 0;
}
@if (Model.Count > 0)
{
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>SL đặt</th>
                                    <th>Tổng giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    double total = item.OrderQuantity * item.Products.Price;
                                    TotalBill += total;
                                    <tr>
                                        <td class="cart-pic first-row"><img src="@item.Products.Image" width="50%" alt=""></td>
                                        <td class="cart-title first-row">@item.Products.Name</td>
                                        <td class="p-price first-row">@item.Products.Price VNĐ</td>
                                        <td class="qua-col first-row">
                                            <div class="quantity">
                                                @item.OrderQuantity
                                            </div>
                                        </td>
                                        <td class="total-price">@total</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="cart-total">Tổng đơn hàng: <span>@TotalBill VNĐ</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div>No items added to the shopping cart...</div>
}
